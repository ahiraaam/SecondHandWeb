<div class="content">
<h1>All accounts</h1>
{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{else}}
	
	{{#if accounts.length}}
		<ul>
			{{#each accounts}}
				<li><a href="/accounts/{{username}}">{{username}}</a></li>
			{{/each}}
		</ul>
	{{else}}
		<h1>No accounts exist yet.</h1>
	{{/if}}
	
{{/if}}
</div>
<div class="container-fluid">
    <form method="POST" action="">
        <div class="row justify-content-md-center">
            <div class="col-md-5 col-10">
                <input type="text" class="form-control" id="email" placeholder="Enter email" name="email">
            </div>
            <div class="col-md-1 col-2">
                <button class="btn primary-btn" type="submit">Search</button>
            </div>
        </div>
    </form>

    <div class="container-fluid my-3">
        <div class="row">
            {{#if petitionslength}}
                {{#each petition}}
                    <div class="col-4">
                        <div class="card">
                            <img class="card-img-top" src="https://i.ytimg.com/vi/WE00soncSqw/maxresdefault.jpg" alt="">
                            <div class="card-body">
                                <h4 class="card-title">{{title}} Ahiram</h4>
                                <p class="card-text">{{place}}Maravilla</p>
                                <a href="/petitions/{{id}}" class="btn primary-btn">See More</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <h3>No petitions yet</h3>
            {{/if}}
        
        </div>

    </div>
   
</div>

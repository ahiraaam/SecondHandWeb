<div class="container">
    <h2 class="text-center">Offer</h2>
    <div class="row py-3">
        {{#if offer}}
            <div class="col-12 col-md-6 mx-auto">
                <h3>{{offer.title}}</h1>
                <h4>{{offer.author}}</h3>
                <h4>{{offer.place}}</h3>
                <h4>{{offer.state}}</h4>
                <p>{{offer.commentary}}</p>
                <h4 class="my-3" name="price" id="price">${{offer.price}}</h4>
                {{#if isMine}}
                    <div class="text-center ">
                        <button class="btn btn-lg btn-block primary-btn ">Accept</button>
                    </div>
                {{/if}}
            </div>
        {{else}}
            <p>No offer found</p>
        {{/if}}
    </div>
</div>
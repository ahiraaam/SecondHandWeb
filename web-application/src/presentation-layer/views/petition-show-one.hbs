<div class="container">
    <h2 class="text-center">Petition</h2>
    <div class="row py-3">
        {{#if petition}}
            <div class="col-12 col-md-6">
                <h2 class="text-center">{{petition.title}}</h2>
                <img class="col-12 image-show-one "src="{{petition.photo}}" alt="">
                {{#if isMine}}
                    
                {{else}}
                    <div class="col text-center">
                        <a class="btn btn-lg btn-block"href="../offers/create-offer/{{petition.id}}">
                            <button class="btn btn-block primary-btn" >Offer</button>
                        </a>
                    </div>
                {{/if}}
            </div>
            <div class="col col-md-6 py-5">
                <h4>Author: {{petition.author}}</h4>
                <h4>Place: {{petition.place}}</h4>
                <h4>State: {{petition.state}}</h4>
                <p>Commentary: {{petition.commentary}}</p>
                <h3>Offers for this petition</h3>
                {{#if offers.length}}
                    <div class="list-group">
                        {{#each offers}}
                            <a class="list-group-item list-group-item-action" href="../offers/{{id}}">
                                {{title}} - ${{price}}
                            </a>
                        {{/each}}
                    </div>
                {{else}}
                    <p>No offers exist yet.</p>
                {{/if}}
            </div>
        {{/if}}

    </div>
</div>
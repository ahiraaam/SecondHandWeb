<div class="container col-sm-9 col-md-7 col-lg-8">
    <h2 class="text-center">Create Offer</h2>
    <form action="{{offer.id}}" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" class="form-control" value="{{offer.title}}" required autofocus>
            </div>
            <div class="form-group col-md-6">
                <label for="author">Author</label>
                <input type="text" id="author" name="author" class="form-control" value="{{offer.author}}" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="place">Place</label>
                <input type="text" id="place" name="place" class="form-control" value="{{offer.place}}" required>
            </div>
            <div class="form-group col-md-6">
                <label for="state">State of the book</label>
                <select class="form-control" name="state" id="state" required>
                    <option value="new">New</option>
                    <option value="used">Used</option>
                    <option value="any">Any</option>
                </select>
            </div>
        </div>
        
        <div class="form-group">
            <label for="commentary">Commentary</label>
            <input type="text" id="commentary" name="commentary" class="form-control" value="{{offer.commentary}}">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" class="form-control" value="{{offer.price}}" min="1" step="any" readonly>
        </div>

        <div class="form-group text-center">
            <input type="hidden" value="{{offer.account_id}}" name="accoundId">
            <input class="btn btn-lg primary-btn text-uppercase" type="submit" value="Update Offer">
        </div>
    </form>
</div>